#!/usr/bin/env bash
set -euo pipefail

if [[ $# -lt 1 ]]; then
  echo "usage: sg <command> [args...]" >&2
  exit 1
fi

cmd="$1"
shift || true

case "$cmd" in
  sitrep)
    # Placeholder dry-run implementation until the full CLI lands.
    if [[ "${1:-}" == "--dry-run" ]]; then
      echo "[sg] SITREP dry-run completed"
    else
      echo "[sg] SITREP completed"
    fi
    ;;
  scan)
    echo "[sg] scan placeholder (sources: ${*:-default})"
    ;;
  targets)
    echo "[sg] targets placeholder"
    ;;
  manifest)
    echo "[sg] manifest placeholder" && cat
    ;;
  strike)
    echo "[sg] strike placeholder (${*:-})"
    ;;
  *)
    echo "unknown sg command: $cmd" >&2
    exit 2
    ;;
 esac
