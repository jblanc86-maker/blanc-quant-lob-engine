{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Example Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/run_example.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Replay",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/replay",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb"
    },
    {
      "name": "(lldb) Attach",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/a.out",
      "MIMode": "lldb"
    },
    {
      "name": "CMake: Script debugging",
      "type": "cmake",
      "request": "launch",
      "cmakeDebugType": "script",
      "scriptPath": "${workspaceFolder}/bench/CMakeLists.txt"
    }
  ]
}
